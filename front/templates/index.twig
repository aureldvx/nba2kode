{% extends 'base_of.twig' %}

{% block title %}Listing des matchs{% endblock %}

{% block header %}
  <header class="flex items-center justify-between p-4 shadow-md fixed w-full bg-white">
    <h1 class="text-2xl font-bold text-indigo-500">NBA2KODE</h1>
    <div class="actions">
      <a href="/add" class="appearance-none rounded-sm px-4 py-3 bg-indigo-500 text-white">Ajouter un match</a>
    </div>
  </header>
{% endblock %}

{% block body %}
  <div class="grid grid-cols-4 auto-rows-max gap-4 w-11/12 ml-auto mr-auto items-stretch">
  {% for match in matches %}
    <div class="rounded-md shadow-md flex flex-col items-stretch justify-between p-4">
      <span class="text-center">{{ match.play_date|date('d M Y H:i') }}</span>
      <div class="flex flex-col items-stretch mt-10">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <img src="{{ match.teams_home_logo }}" alt="" class="w-9 h-auto mr-5">
            <span>{{ match.teams_home_name }}</span>
          </div>
          <span class="font-bold text-2xl">{{ match.score_home_total }}</span>
        </div>
        <div class="flex items-center justify-between mt-5">
          <div class="flex items-center">
            <img src="{{ match.teams_away_logo }}" alt="" class="w-9 h-auto mr-5">
            <span>{{ match.teams_away_name }}</span>
          </div>
          <span class="font-bold text-2xl">{{ match.score_away_total }}</span>
        </div>
      </div>
      <a href="/delete/{{ match.id }}" class="appearance-none rounded-sm px-3 py-2 bg-red-50 text-red-500 block w-full text-center mt-10">Supprimer</a>
    </div>
  {% endfor %}
  </div>
{% endblock %}